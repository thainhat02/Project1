@model PagedList.IPagedList<WebBanHangOnline.Models.ApplicationUser>
@using PagedList.Mvc
@using PagedList
@{
    ViewBag.Title = "Quản lý tài khoản";
}


@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Danh sách tài khoản</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý tài khoản</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh sách tài khoản</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-4">
                    @using (Html.BeginForm("Index", "Account", FormMethod.Get, new { }))
                    {
                        <div class="input-group input-group-sm">
                            @*<input type="text" name="search" class="form-control">*@
                            <span style="font-size:18px;">Tìm kiếm theo tên: &ensp;</span>
                            @Html.TextBox("search")
                            <span class="input-group-append">
                                <button type="submit" class="btn btn-info btn-flat">Tìm kiếm</button>
                            </span>
                        </div>
                    }

                </div>
                <div class="card-tools" style="margin-left:850px;">
                    <a href="/admin/account/create" class="btn btn-success">Thêm mới</a>
                </div>
            </div>
            
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tài khoản</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
                            <tr id="trow_@item.Id">
                                <td>@i</td>
                                <td>@item.UserName</td>
                                <td>@item.Fullname</td>
                                <td>@item.Email</td>

                                <td>
                                    @*<a href="/admin/account/edit/@item.Id" class="btn btn-sm btn-primary">Sửa</a>*@
                                    <a href="#" data-user="@item.UserName" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>

            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
        <div class="card-footer"></div>
    </div>
</section>

@section scripts{
    <script>
        $(document).ready(function () {
            $('.btnDelete').click(function () {
                var user = $(this).data('user');
                var id = $(this).data('id');
                $.ajax({
                    url: '/admin/account/DeleteAccount',
                    type: 'POST',
                    data: { user: user, id: id },
                    success: function (res) {
                        if (res.Success) {
                            $('#trow_' + id).remove();
                        }
                    }
                })
            })
        })
    </script>
}


