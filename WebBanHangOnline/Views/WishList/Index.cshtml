@model PagedList.IPagedList<WebBanHangOnline.Models.EF.WishList>
@using PagedList.Mvc
@using PagedList;
@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }

    .row-item-new {
        margin-bottom: 20px;
    }
</style>
<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-news">Sản phẩm yêu thích</h1>
        </div>
    </div>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="row row-item-new" id="trow_@item.Id">
                <div class="col-md-3">
                    <div class="img-box">
                        <a href="" title="@item.Product.Title"><img src="@item.Product.Image" alt="@item.Product.Title" /></a>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="content-box">
                        <h3><a href="/@item.Product.Alias-n@(item.ProductId)" title="@item.Product.Title">@item.Product.Title</a></h3>
                        @*<div class="description-box">
                                @item.Product.Description
                            </div>*@
                    </div>
                </div>
                <div class="col-md-1">
                    <a href="#" data-id="@item.Id" class="btn btn-danger btnDelete">Xóa</a>
                </div>

            </div>
        }
        <div class="row">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    }

</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm('Bạn muốn xóa bản ghi này không')
                if (conf === true) {
                    $.ajax({
                        url: '/wishlist/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $("#trow_" + id).remove();
                            }

                        }
                    });
                }
            });
        })
    </script>    
}


